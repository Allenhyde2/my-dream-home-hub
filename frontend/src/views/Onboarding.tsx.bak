import { useState, useMemo, useRef, useCallback } from "react";
import { useNavigate } from "@/hooks/use-navigate";
import { useMutation } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Slider } from "@/components/ui/slider";
import { Progress } from "@/components/ui/progress";
import { X, ChevronLeft, ChevronRight, Check, Gift, Search, MapPin, Calendar, Wallet, Users, Heart, PartyPopper } from "lucide-react";
import { cn } from "@/lib/utils";
import { getCities, getDistrictsByCity, getDistrictNamesByCity, getDongsByDistrict, KOREAN_DISTRICTS, searchDong } from "@/data/koreanDistricts";
import { FAMILY_TYPES, INTEREST_OPTIONS, AVAILABLE_FUNDS_OPTIONS, type TargetArea } from "../shared/models/auth";
import { apiRequest, queryClient } from "@/lib/queryClient";
import confetti from "canvas-confetti";
import { useEffect, useRef as useReactRef } from "react";
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogHeader,
  DialogTitle,
} from "@/components/ui/dialog";

const TOTAL_STEPS = 9;

const PRIORITY_LABELS = ["1순위", "2순위", "3순위"] as const;

interface OnboardingData {
  nickname: string;
  residenceCity: string;
  residenceDistrict: string;
  residenceDong: string;
  targetAreas: TargetArea[];
  purchaseTimeline: number;
  availableFunds: string;
  familyTypes: string[];
  interests: string[];
  termsAccepted: boolean;
  privacyAccepted: boolean;
  marketingAccepted: boolean;
  adAgreementAccepted: boolean;
  thirdPartyAgreementAccepted: boolean;
  allTermsAccepted: boolean;
}

interface OnboardingProps {
  isEmbedded?: boolean;
  onClose?: () => void;
}

export default function Onboarding({ isEmbedded, onClose }: OnboardingProps) {
  const navigate = useNavigate();
  const [step, setStep] = useState(0);
  const [showRewardPopup, setShowRewardPopup] = useState(false);
  const [countdown, setCountdown] = useState(3);

  const [data, setData] = useState<OnboardingData>({
    nickname: "",
    residenceCity: "",
    residenceDistrict: "",
    residenceDong: "",
    targetAreas: [],
    purchaseTimeline: 6,
    availableFunds: "5억",
    familyTypes: [],
    interests: [],
    termsAccepted: false,
    privacyAccepted: false,
    marketingAccepted: false,
    adAgreementAccepted: false,
    thirdPartyAgreementAccepted: false,
    allTermsAccepted: false,
  });

  const handleAllTermsAccept = () => {
    const newValue = !data.allTermsAccepted;
    setData({
      ...data,
      termsAccepted: newValue,
      privacyAccepted: newValue,
      allTermsAccepted: newValue,
    });
  };

  useEffect(() => {
    if (data.allTermsAccepted) {
      setData({
        ...data,
        termsAccepted: true,
        privacyAccepted: true,
      });
    }
  }, [data.allTermsAccepted]);

  // Residence selection state (Single Search)
  const [addressSearch, setAddressSearch] = useState("");
  const [addressResults, setAddressResults] = useState<{ city: string; district: string; dong: string }[]>([]);
  const [showAddressResults, setShowAddressResults] = useState(false);
  const [highlightedIndex, setHighlightedIndex] = useState(-1);

  // Input refs for focus management
  const nextButtonRef = useRef<HTMLButtonElement>(null);

  // Target area selection state
  const [selectedCity, setSelectedCity] = useState<string>("서울특별시");
  const [selectedDistrict, setSelectedDistrict] = useState<string>("");
  const selectedAreasScrollRef = useRef<HTMLDivElement>(null);

  const updateMutation = useMutation({
    mutationFn: async (profileData: OnboardingData) => {
      return apiRequest("/api/user/profile", {
        method: "PATCH",
        body: JSON.stringify({
          ...profileData,
          onboardingCompleted: true,
          rewardPoints: 3000,
        }),
      });
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ["/api/auth/user"] });
    },
    onError: (error) => {
      if (error.message.includes("401")) {
        alert("로그인이 필요합니다. 로그인 후 다시 시도해주세요.");
        window.location.href = "/api/login/test?redirect=/onboarding";
      }
    },
  });





  // Nickname enter handler
  const handleNicknameKeyDown = (e: React.KeyboardEvent) => {
    if (e.key === "Enter" && data.nickname.trim().length >= 2) {
      e.preventDefault();
      setStep(3); // Go to step 3 (Residence)
    }
  };

  const addTargetArea = (city: string, district: string, dong: string) => {
    if (data.targetAreas.length >= 3) return;
    if (data.targetAreas.some(a => a.city === city && a.district === district && a.dong === dong)) return;

    const newArea: TargetArea = {
      city,
      district,
      dong,
      priority: data.targetAreas.length + 1,
    };
    setData({ ...data, targetAreas: [...data.targetAreas, newArea] });
  };

  const removeTargetArea = (index: number) => {
    const newAreas = data.targetAreas.filter((_, i) => i !== index).map((area, i) => ({
      ...area,
      priority: i + 1,
    }));
    setData({ ...data, targetAreas: newAreas });
  };

  // Auto-scroll to the end when a new area is added
  useEffect(() => {
    if (selectedAreasScrollRef.current && data.targetAreas.length > 0) {
      const scrollContainer = selectedAreasScrollRef.current;
      scrollContainer.scrollTo({
        left: scrollContainer.scrollWidth,
        behavior: 'smooth'
      });
    }
  }, [data.targetAreas.length]);

  const toggleFamilyType = (type: string) => {
    if (data.familyTypes.includes(type)) {
      setData({ ...data, familyTypes: data.familyTypes.filter(t => t !== type) });
    } else if (data.familyTypes.length < 3) {
      setData({ ...data, familyTypes: [...data.familyTypes, type] });
    }
  };

  const toggleInterest = (interest: string) => {
    if (data.interests.includes(interest)) {
      setData({ ...data, interests: data.interests.filter(i => i !== interest) });
    } else if (data.interests.length < 5) {
      setData({ ...data, interests: [...data.interests, interest] });
    }
  };

  const canProceed = useMemo(() => {
    switch (step) {
      case 1: return data.termsAccepted && data.privacyAccepted;
      case 2: return data.nickname.trim().length >= 2;
      case 3: return data.residenceDong.length > 0;
      case 4: return data.targetAreas.length >= 1;
      case 5: return true;
      case 6: return true;
      case 7: return data.familyTypes.length >= 1;
      case 8: return data.interests.length >= 1;
      case 9: return true;
      default: return false;
    }
  }, [step, data]);

  const handleNext = async () => {
    if (step < TOTAL_STEPS) {
      setStep(step + 1);
    } else if (step === TOTAL_STEPS) {
      await handleRewardClick();
    }
  };

  const handleBack = () => {
    if (step > 1) {
      setStep(step - 1);
    } else {
      if (isEmbedded && onClose) {
        onClose();
      } else {
        navigate(-1);
      }
    }
  };

  const handleRewardClick = async () => {
    try {
      await updateMutation.mutateAsync(data);
      setShowRewardPopup(true);
      setCountdown(3);

      // Fire confetti animation
      const duration = 3000;
      const animationEnd = Date.now() + duration;
      const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 50 };

      const randomInRange = (min: number, max: number) => Math.random() * (max - min) + min;

      const interval: any = setInterval(function () {
        const timeLeft = animationEnd - Date.now();

        if (timeLeft <= 0) {
          return clearInterval(interval);
        }

        const particleCount = 50 * (timeLeft / duration);
        confetti({
          ...defaults,
          particleCount,
          origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 }
        });
        confetti({
          ...defaults,
          particleCount,
          origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 }
        });
      }, 250);

    } catch (error) {
      console.error("Failed to save profile:", error);
      alert("로그인이 필요합니다. 로그인 후 다시 시도해주세요.");
      window.location.href = "/api/login/test?redirect=/onboarding";
    }
  };

  const handleRewardConfirm = () => {
    setShowRewardPopup(false);
    if (isEmbedded && onClose) {
      onClose();
    } else {
      window.location.href = "/";
    }
  };

  useEffect(() => {
    if (showRewardPopup && countdown > 0) {
      const timer = setTimeout(() => {
        setCountdown(countdown - 1);
      }, 1000);

      return () => clearTimeout(timer);
    } else if (showRewardPopup && countdown === 0) {
      handleRewardConfirm();
    }
  }, [showRewardPopup, countdown]);

  const currentDistricts = getDistrictsByCity(selectedCity);

  const progress = (step / TOTAL_STEPS) * 100;

  const fundsIndex = AVAILABLE_FUNDS_OPTIONS.indexOf(data.availableFunds as typeof AVAILABLE_FUNDS_OPTIONS[number]);

  return (
    <div className={cn("min-h-screen bg-background relative", step === 0 && "flex flex-col", isEmbedded && "min-h-0 bg-transparent")}>
      {step >= 0 && step < TOTAL_STEPS && (
        <button
          onClick={handleBack}
          className="absolute left-4 top-4 z-50 p-2 text-foreground hover:text-primary transition-all active:scale-95"
          aria-label="뒤로 가기"
        >
          <ChevronLeft className="w-10 h-10" />
        </button>
      )}

      <div className={cn(
        "flex-1 flex flex-col justify-center max-w-2xl mx-auto w-full",
        isEmbedded ? "px-4" : "px-4 md:px-0",
        step > 0 && step < 8 ? "pt-20 pb-24 md:pb-8" : "py-8"
      )}>
        {step > 0 && step < TOTAL_STEPS && (
          <div className="mb-8">
            <Progress value={progress} className="h-2" />
            <p className="text-sm text-muted-foreground mt-2 text-center">
              {step} / {TOTAL_STEPS}
            </p>
          </div>
        )}

        {step === 0 && (
          <div className="flex flex-col h-full bg-background animate-in fade-in slide-in-from-bottom-4 duration-500">
            {/* Banner Section */}
            <div className="flex-1 flex flex-col justify-center items-center text-center space-y-4 mb-16">
              <div className="w-20 h-20 bg-gradient-to-br from-primary/20 to-primary/10 rounded-2xl flex items-center justify-center mb-4 rotate-3 transform transition-transform hover:rotate-6 shadow-lg">
                <div className="relative">
                  <Heart className="w-10 h-10 text-primary fill-current" />
                  <div className="absolute -top-1 -right-1 w-3 h-3 bg-yellow-400 rounded-full animate-pulse" />
                </div>
              </div>
              <h1 className="text-2xl font-bold leading-tight">
                나만의 드림하우스를<br />
                시작하는 여정
              </h1>
              <p className="text-3xl font-extrabold text-primary tracking-tight">
                Dream Hub.
              </p>
              <p className="text-sm text-muted-foreground max-w-xs">
                지금 가입하고 맞춤형 부동산 정보를 받아보세요
              </p>
            </div>

            {/* Signup Options */}
            <div className="space-y-3 w-full max-w-sm mx-auto">
              <Button
                variant="outline"
                className="w-full h-12 bg-[#FEE500] hover:bg-[#FEE500]/90 text-black border-none font-medium text-base relative"
                onClick={() => setStep(1)}
              >
                <div className="absolute left-4">
                  <svg viewBox="0 0 24 24" className="w-5 h-5 fill-current">
                    <path d="M12 3C5.925 3 1 6.925 1 11.772c0 2.923 1.874 5.467 4.704 7.025-.138.517-.5.952-1.127 1.838-.138.196-.06.467.168.599.096.055.204.085.312.085.252 0 .504-.085.708-.252 2.136-1.503 3.192-2.188 3.324-2.272.612.096 1.248.144 1.911.144 6.075 0 11-3.925 11-8.772C22 6.925 17.075 3 12 3z" />
                  </svg>
                </div>
                카카오로 가입하기
              </Button>

              <Button
                variant="outline"
                className="w-full h-12 bg-black hover:bg-black/90 text-white border-none font-medium text-base relative"
                onClick={() => setStep(1)}
              >
                <div className="absolute left-4">
                  <svg viewBox="0 0 24 24" className="w-5 h-5 fill-current">
                    <path d="M17.05 20.28c-.98.95-2.05.8-3.08.35-1.09-.46-2.09-.48-3.24 0-1.44.62-2.2.44-3.06-.35C2.79 15.25 3.51 7.59 9.05 7.31c1.35.07 2.29.74 3.08.74 1.18 0 2.45-1.03 3.96-.8 2 .25 3.33 1.34 4.09 2.59-3.79 1.98-3.04 6.78.43 8.3-1.04 2.5-2.48 4.67-4.22 4.4zM12.03 7.25c-.15-2.23 1.66-4.07 3.74-4.25.16 2.29-2.04 4.19-3.74 4.25z" />
                  </svg>
                </div>
                애플로 가입하기
              </Button>

              <Button
                variant="outline"
                className="w-full h-12 bg-white hover:bg-gray-50 text-black border border-gray-200 font-medium text-base relative"
                onClick={() => setStep(1)}
              >
                <div className="absolute left-4">
                  <svg viewBox="0 0 24 24" className="w-5 h-5">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4" />
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853" />
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05" />
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335" />
                  </svg>
                </div>
                구글로 가입하기
              </Button>
            </div>

            {/* Divider */}
            <div className="relative my-6 w-full max-w-sm mx-auto">
              <div className="absolute inset-0 flex items-center">
                <span className="w-full border-t border-muted-foreground/20" />
              </div>
              <div className="relative flex justify-center text-xs uppercase">
                <span className="bg-background px-2 text-muted-foreground">또는</span>
              </div>
            </div>

            {/* Email Option */}
            <div className="mb-8 w-full max-w-sm mx-auto">
              <Button
                variant="outline"
                className="w-full h-12 font-medium text-base relative"
                onClick={() => setStep(1)}
              >
                이메일로 가입하기
              </Button>
            </div>
          </div>
        )}

        {step === 1 && (
          <Card className="border-0 shadow-none sm:border sm:shadow-sm">
            <CardHeader className="flex flex-col items-start space-y-6 pb-6 pt-8">
              <div className="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center rotate-3 transition-transform hover:rotate-12 duration-300">
                <Check className="w-8 h-8 text-primary" />
              </div>
              <div className="space-y-2 text-left">
                <CardTitle className="text-2xl font-bold">
                  이용 약관 동의
                </CardTitle>
                <CardDescription className="text-base text-muted-foreground">
                  원활한 서비스 이용을 위해 약관에 동의해주세요
                </CardDescription>
              </div>
            </CardHeader>
            <CardContent className="space-y-6">
              <button
                onClick={handleAllTermsAccept}
                className={cn(
                  "w-full p-4 rounded-xl border-2 flex items-center justify-between transition-all",
                  data.allTermsAccepted
                    ? "bg-primary border-primary text-primary-foreground shadow-lg scale-[1.02]"
                    : "bg-card border-border hover:border-primary/50"
                )}
              >
                <span className="text-lg font-bold">전체 동의하기</span>
                {data.allTermsAccepted ? <Check className="w-6 h-6" /> : <div className="w-6 h-6 rounded-full border-2" />}
              </button>

              <div className="max-h-[460px] overflow-y-auto pr-2 custom-scrollbar space-y-6">
                <div className="space-y-4">
                  <p className="text-sm font-semibold text-primary px-1 flex items-center gap-2">
                    <span className="w-1 h-4 bg-primary rounded-full" />
                    필수 이용 약관
                  </p>

                  {/* 이용약관 */}
                  <div className="space-y-2">
                    <label className="flex items-center gap-3 p-3 bg-muted/50 rounded-lg cursor-pointer hover:bg-muted transition-colors border border-transparent hover:border-primary/20">
                      <input
                        type="checkbox"
                        checked={data.termsAccepted}
                        onChange={(e) => setData({ ...data, termsAccepted: e.target.checked })}
                        className="w-5 h-5 accent-primary"
                      />
                      <span className="text-sm font-bold">이용약관 동의 (필수)</span>
                    </label>
                    <div className="p-3 bg-muted/20 rounded-lg text-[11px] leading-relaxed h-32 overflow-y-auto custom-scrollbar text-muted-foreground border border-border/50">
                      제 1 조 (목적) 본 약관은 Dream Hub 서비스(이하 "서비스")의 이용 조건 및 절차, 회원과 회사 간의 권리, 의무 및 책임 사항 등을 규정함을 목적으로 합니다.<br /><br />
                      제 2 조 (서비스의 제공) 회사는 회원에게 부동산 매물 정보 발췌, 맞춤형 알림, 주거 트렌드 분석 등 부동산 관련 최적화된 콘텐츠를 제공합니다.<br /><br />
                      제 3 조 (회원의 의무) 회원은 본 서비스의 이용과 관련하여 타인의 정보를 도용하거나 서비스를 부정하게 이용해서는 안 됩니다.
                    </div>
                  </div>

                  {/* 개인정보 처리방침 */}
                  <div className="space-y-2">
                    <label className="flex items-center gap-3 p-3 bg-muted/50 rounded-lg cursor-pointer hover:bg-muted transition-colors border border-transparent hover:border-primary/20">
                      <input
                        type="checkbox"
                        checked={data.privacyAccepted}
                        onChange={(e) => setData({ ...data, privacyAccepted: e.target.checked })}
                        className="w-5 h-5 accent-primary"
                      />
                      <span className="text-sm font-bold">개인정보 수집 및 이용 동의 (필수)</span>
                    </label>
                    <div className="p-3 bg-muted/20 rounded-lg text-[11px] leading-relaxed h-32 overflow-y-auto custom-scrollbar text-muted-foreground border border-border/50">
                      1. 수집 항목: 이름, 이메일, 닉네임, 거주지 정보, 매수 관심 지역.<br /><br />
                      2. 이용 목적: 맞춤형 부동산 추천 서비스 제공, 회원 관리, 서비스 품질 개선.<br /><br />
                      3. 보유 기간: 회원 탈퇴 시까지 (단, 법령에 따라 보존이 필요한 경우 해당 기간 보관).
                    </div>
                  </div>
                </div>

                <div className="space-y-4 pt-4 border-t border-dashed border-border/60">
                  <p className="text-sm font-semibold text-muted-foreground px-1 flex items-center gap-2">
                    <span className="w-1 h-4 bg-muted-foreground/30 rounded-full" />
                    선택 약관 (마케팅 및 혜택 알림)
                  </p>

                  <div className="space-y-4">
                    {/* 마케팅 수신 */}
                    <div className="space-y-2">
                      <label className="flex items-center gap-3 p-3 bg-muted/30 rounded-lg cursor-pointer hover:bg-muted transition-colors border border-transparent">
                        <input
                          type="checkbox"
                          checked={data.marketingAccepted}
                          onChange={(e) => setData({ ...data, marketingAccepted: e.target.checked })}
                          className="w-5 h-5 accent-primary"
                        />
                        <span className="text-sm text-muted-foreground font-medium">마케팅 정보 수신 동의</span>
                      </label>
                      <div className="p-3 bg-muted/10 rounded-lg text-[11px] leading-relaxed h-20 overflow-y-auto custom-scrollbar text-muted-foreground/70 border border-border/30">
                        신규 매물 알림, 이벤트 혜택, 회원 맞춤형 구독형 뉴스레터 등 다양한 정보를 이메일과 푸시 알림으로 받아보실 수 있습니다.
                      </div>
                    </div>

                    {/* 광고성 정보 */}
                    <div className="space-y-2">
                      <label className="flex items-center gap-3 p-3 bg-muted/30 rounded-lg cursor-pointer hover:bg-muted transition-colors border border-transparent">
                        <input
                          type="checkbox"
                          checked={data.adAgreementAccepted}
                          onChange={(e) => setData({ ...data, adAgreementAccepted: e.target.checked })}
                          className="w-5 h-5 accent-primary"
                        />
                        <span className="text-sm text-muted-foreground font-medium">광고성 정보 수신 동의</span>
                      </label>
                      <div className="p-3 bg-muted/10 rounded-lg text-[11px] leading-relaxed h-20 overflow-y-auto custom-scrollbar text-muted-foreground/70 border border-border/30">
                        회사의 제휴사(금융, 인테리어 등)에서 제공하는 맞춤 프로모션 및 광고성 정보를 수신하는 것에 동의합니다.
                      </div>
                    </div>

                    {/* 제3자 제공 */}
                    <div className="space-y-2">
                      <label className="flex items-center gap-3 p-3 bg-muted/30 rounded-lg cursor-pointer hover:bg-muted transition-colors border border-transparent">
                        <input
                          type="checkbox"
                          checked={data.thirdPartyAgreementAccepted}
                          onChange={(e) => setData({ ...data, thirdPartyAgreementAccepted: e.target.checked })}
                          className="w-5 h-5 accent-primary"
                        />
